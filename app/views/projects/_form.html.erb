<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :project_name, style: "display: block" %>
    <%= form.text_field :project_name %>
  </div>

  <div>
    <%= form.label :no_of_tasks, style: "display: block" %>
    <%= form.number_field :no_of_tasks %>
  </div>

  <div>

    <%= form.fields_for :tasks,Task.new do |t|%>
    <%= link_to "Add new task",new_project_task_path(t) %><br>
    <%= t.label :task_name %><br>
    <%= t.text_field :task_name %>
    <%= link_to "Remove task" %>
    <% end  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
